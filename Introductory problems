5) PERMUTATIONS
#include<bits/stdc++.h>
#define ll long long
#define bitc(n) __builtin_popcount(n)
using namespace std;
 
 
int main(){
  ll n;
	cin >> n;
	 vector<ll> a,b;
	if(n==2 || n==3) cout<<"NO SOLUTION"<<"\n";
  else{
		for(int i=0;i<n;i++){
			if((i+1)%2==0) a.push_back(i+1);
			else b.push_back(i+1);
		}
	} 
 
	for(int i=0;i<a.size();i++){
		cout<<a[i]<<" ";
	}
 
	for(int i=0;i<b.size();i++){
		cout<<b[i]<<" ";
	}
 
}
